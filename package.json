{
  "name": "mixed-content-crawler",
  "description": "Find mixed content errors on a site by crawling it with Puppeteer",
  "license": "ISC",
  "author": "Buster Collings <busterc@gmail.com>",
  "repository": "busterc/mixed-content-crawler",
  "version": "0.1.0",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepare": "lec lib/cli.js -c LF",
    "prepublishOnly": "nsp check",
    "pretest": "eslint .",
    "test": "jest --coverage"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "crwlr": "^0.2.0",
    "meow": "^5.0.0",
    "puppeteer": "^3.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-xo": "^0.24.1",
    "eslint-plugin-json": "^1.2.1",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lec": "^1.0.1",
    "lint-staged": "^7.2.0",
    "nsp": "^3.2.1",
    "prettier": "^1.11.1",
    "prettier-package-json": "^2.0.0"
  },
  "keywords": [
    "content",
    "crawler",
    "errors",
    "http",
    "https",
    "mixed",
    "mixed-content",
    "puppeteer",
    "scanner",
    "ssl",
    "tls"
  ],
  "engines": {
    "npm": ">= 4.0.0"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier",
      "json"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  }
}
